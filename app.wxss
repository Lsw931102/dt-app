/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
} 
.title1 {
  font-size: 44rpx;
  font-weight: bold;
}
.title2 {
  font-size: 40rpx;
}
.content {
  width: 90%;
  font-size: 32rpx;
  margin-top: 40rpx;
}
.content-center {
  width: 100%;
}
navigator {
  color: deepskyblue;
}
.btnBlue {
  color: #fff;
  background-color: rgba(22, 155, 213, 1)
}
.btn-area .btn-blue {
  float: left;
  width: 50%;
  text-align: center
}
.btn-area button {
  color: #fff;
  background-color: rgba(22, 155, 213, 1)
}

/* 模仿table样式 */
.table {
  border: 2rpx solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 100%;
  margin: 0 auto;
}
.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.th,.td {
  padding: 20rpx;
  border-bottom: 2rpx solid #dadada;
  border-right:  2rpx solid #dadada;
  text-align: center;
  width: 100%;
}
.th {
  font-weight: 300;
  background-color: #eee;
}

/* 模拟表单样式 */
form {
  overflow: hidden;
  width: 100%;
}
form .form-item {
  overflow: hidden;
  margin-bottom: 30rpx;
}
.form-input text {
  float: left;
  width: 32%;
  text-align: center;
}
.form-input .input-box {
  float: left;
  width: 65%;
}
.form-input .input-box input {
  width: 100%;
  padding: 0 10rpx;
  border: 1px solid #dadada;
  box-sizing: border-box;
  border-radius: 3px;
}
.form-input label {
  float: left;
  width: 3%;
  text-align: center;
  color: red;
}
form .form-radio text {
  float: left;
  width: 32%;
  text-align: center;
}
form .form-radio radio-group {
  float: left;
  width: 67%;
}

